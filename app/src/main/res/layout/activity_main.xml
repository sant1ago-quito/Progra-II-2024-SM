<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btnImgPelis"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="134dp"
        android:src="@android:drawable/ic_menu_camera" />

    <EditText
        android:id="@+id/txtTitulo"
        android:inputType="textPersonName"
        android:hint="Titulo"
        android:layout_below="@+id/btnImgPelis"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtSinopsis"
        android:hint="Sinopsis"
        android:inputType="textMultiLine"
        android:layout_below="@id/txtTitulo"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtDuracion"
        android:hint="Duracion"
        android:inputType="textMultiLine"
        android:layout_below="@id/txtSinopsis"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/txtActor"
        android:hint="Actor"
        android:inputType="textMultiLine"
        android:layout_below="@id/txtDuracion"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnGuardarProducto"
        android:layout_below="@id/txtActor"
        android:layout_marginTop="40dp"
        android:text="GUARDAR CARRO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabListarAmigos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@android:drawable/ic_menu_revert" />

</RelativeLayout>